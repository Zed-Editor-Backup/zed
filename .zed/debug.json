[
  {
    "label": "Debug Zed (CodeLLDB)",
    "adapter": "CodeLLDB",
    "program": "target/debug/zed",
    "request": "launch",
    "args": [
      "ssh://nas"
    ],
    "env": {
      "ZED_BUILD_REMOTE_SERVER": "1"
    }
  },
  {
    "label": "Debug Zed (GDB)",
    "adapter": "GDB",
    "program": "$ZED_WORKTREE_ROOT/target/debug/zed",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "initialize_args": {
      "stopAtBeginningOfMainSubprogram": true
    }
  }
]
